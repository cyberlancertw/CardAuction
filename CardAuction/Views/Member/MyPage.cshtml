                                </div>
                                <div class="info-time">
                                    <h6>@resetday</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
            @Html.PagedListPager(Model.MyExchangeFavorite, page => Url.Action("MyPage", new { page, lead = "exchangefavorite" }))
