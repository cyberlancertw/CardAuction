
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/MemberCss/cssMemberChange.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <title>修改密碼</title>
    <style>
    </style>
</head>
<body>
    <div class="passwordforget-page">
        <div class="header">
            <a href="~/">
                <img src="~/images/site/logo.svg">
            </a>
        </div>
        <div class="row align-items-center">
            <div id="password-info" col-6 col-sm-6 col-md-4 col-lg-3>
                <div id="title">修改密碼</div>
                <form action="#" method="post">
                    <div id="oringin-password">
                        <input type="password" name="oPassword" id="orpassword" placeholder="請輸入原密碼" required />
                    </div>
                    <div id="new-password">
                        <input type="password" name="nPassword" id="newpassword" placeholder="請輸入新密碼" required />
                    </div>
                    <div id="newpassword-confirm">
                        <input type="password" name="cPassword" id="conpassword" placeholder="確認新密碼" required />
                    </div>
                    <input type="submit" class="disabledBtn" id="btnSUB" value="送出" disabled />
                </form>
                <div class="errorMsg">
                    @ViewBag.ErrorMessage
                </div>
            </div>
        </div>
    </div>
    <script>
        var orpassword = document.getElementById('orpassword');
        var newpassword = document.getElementById('newpassword');
        var conpassword = document.getElementById('conpassword');
        var btnSUB = document.getElementById('btnSUB');

        [orpassword, newpassword, conpassword].forEach(dom => {
            dom.addEventListener('keyup', () => {
                if (orpassword.value != '' && newpassword.value != '' && newpassword.value == conpassword.value) {
                    btnSUB.disabled = false;
                    btnSUB.classList.remove('disabledBtn');
                    btnSUB.classList.add('enabledBtn');
                    console.log('enable');
                }
                else {
                    btnSUB.disabled = true;
                    btnSUB.classList.remove('enabledBtn');
                    btnSUB.classList.add('disabledBtn');
                    console.log('disable');
                }
            });
        });

    </script>
</body>
</html>