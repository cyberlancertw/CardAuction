@model IEnumerable<CardAuction.Models.tMember>

@{
    ViewBag.Title = "會員管理";
}

<h2>會員管理</h2>

<p>
    @Html.ActionLink("新增會員", "Create")
</p>
<table class="table">
    <tr>
        <th>編號</th>
        <th>帳號</th>
        <th>密碼</th>
        <th>姓名</th>
        <th>信箱</th>
        <th>地址</th>
        <th>電話</th>
        <th>生日</th>
        <th>訂閱</th>
        <th>權限</th>
        <th>驗證</th>
        <th>管理</th>
        @*<th>
            @Html.DisplayNameFor(model => model.fActive)
        </th>*@

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.fUserId</td>
        <td>
            @Html.DisplayFor(modelItem => item.fAccount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fPassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fBirthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fSubscribe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fManager)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.fUserId }) |
            @Html.ActionLink("Details", "Details", new { id=item.fUserId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.fUserId })
        </td>
    </tr>
}

</table>
