@using CardAuction.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Bootstrap/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/LayoutCss/cssShortLayout.css" type="text/css" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="fullPage">
        <div id="header">
            <div class="row">
                <div class="col-6 col-sm-4 col-md-2" id="divWebIcon">
                    <a href="~/">
                        <img src="~/images/site/iconWebsite.png" id="webIcon" />
                    </a>
                </div>
                <div class="col-6 col-sm-8 col-md-3" id="divTitle">
                    @ViewBag.pageTitle 
                </div>
                <div class="col-12 col-sm-12 col-md-7" id="divGreeting">
                    @{
            if (Session[CDictionary.SK_UserAccount] != null)
            {
                @:歡迎, @Session[CDictionary.SK_UserAccount].ToString()
            }
                    }
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false);
</body>
</html>